<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/img_product_cart"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/image_1" />

        <TextView
            android:id="@+id/name_product_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/img_product_cart"
            android:fontFamily="@font/poppins_bold"
            android:text="PRODUCT"
            android:textColor="@color/black"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/size_product_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@+id/img_product_cart"
            android:fontFamily="@font/poppins_light"
            android:text="Size : "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/count_product_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:layout_marginTop="100dp"
            android:layout_toEndOf="@+id/img_product_cart"
            android:fontFamily="@font/poppins_light"
            android:text="Number : "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/price_product_cart"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/poppins_bold"
            android:text=" VND"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/delete_cart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/delete_cart" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>